{
  "name": "creator-os-capture-extension",
  "version": "0.1.0",
  "description": "Creator OS Capture Chrome Extension - Phase 0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build:content": "esbuild src/content.ts --bundle --format=iife --sourcemap --outfile=dist/content.js",
    "dev:content": "esbuild src/content.ts --bundle --format=iife --sourcemap --watch --outfile=dist/content.js",
    "build": "tsc && vite build && npm run build:content",
    "zip": "node src/build/zip.js",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "archiver": "^7.0.1",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.4.0"
  }
}
